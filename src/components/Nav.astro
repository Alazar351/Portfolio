---
import icon from "../Icons/briefcase.png";
---

<nav>
  <div class="navbar">
    <a href="/"><img src={icon} width="30px" /></a>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/About">About</a></li>
      <li><a href="/Portfolio">Projects</a></li>
      <li><a href="/Contact">Contact</a></li>
    </ul>
  </div>
</nav>

<style>
  nav {
    display: flex;
    justify-content: space-between;
    background-color: rgba(195, 234, 252, 0.685);
  }
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: end;
    width: calc(100% - 50%);
    margin-left: calc(100% - 80%);
    padding-top: 20px;
    background-color: rgba(124, 124, 124, 0.158);
  }

  ul {
    display: flex;
    list-style-type: none;
    overflow: hidden;
    font-size: 23px;
  }

  li a {
    padding: 10px;
    color: black;
    text-decoration: none;
    margin-left: 20px;
  }

  li a:hover {
    background-color: black;
    color: white;
  }
</style>
