import icon from "../Icons/briefcase.png";
---

<nav>
  <div class="navbar">
    <a href="/"><img src={icon} width="30px" /></a>
    <ul>
      <li><a href="#about">About</a></li>
      <li><a href="#projects">Projects</a></li>
      <li><a href="#contact">Contact</a></li>
    </ul>
  </div>
</nav>

<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: rgba(124, 124, 124, 0.158);
  }

  ul {
    list-style-type: none;
    overflow: hidden;
    margin: 0px;
    padding: 0px;
    font-size: 25px;
  }

  li {
    float: left;
  }
  li a {
    display: block;
    padding: 10px;
    color: black;
    text-decoration: none;
  }

  li a:hover {
    background-color: black;
    color: white;
  }
</style>
